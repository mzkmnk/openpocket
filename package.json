{
  "name": "openpocket",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "pnpm run build:web",
    "build:web": "expo export --platform web",
    "typecheck": "tsc --noEmit",
    "doctor": "expo-doctor",
    "check": "pnpm run typecheck && pnpm run lint && pnpm run format:check && pnpm run test",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "dependencies": {
    "@expo-google-fonts/space-grotesk": "^0.4.1",
    "@noble/ed25519": "^3.0.0",
    "expo": "~54.0.0",
    "expo-clipboard": "~8.0.7",
    "expo-crypto": "~15.0.7",
    "expo-font": "^55.0.4",
    "expo-secure-store": "~15.0.7",
    "expo-status-bar": "~55.0.4",
    "nativewind": "^4.2.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-css-interop": "0.2.2",
    "react-native-web": "^0.21.2",
    "tailwindcss": "^3.4.19"
  },
  "devDependencies": {
    "@types/react": "~19.1.4",
    "eslint": "^9.39.3",
    "eslint-config-expo": "^55.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "~5.9.2",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.30.3",
  "private": true
}

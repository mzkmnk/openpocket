    "expo": "~54.0.0",
    "expo-constants": "~18.0.13",
    "expo-crypto": "~15.0.8",
    "expo-font": "^55.0.4",
    "expo-local-authentication": "^55.0.8",
    "expo-secure-store": "~15.0.8",
    "expo-status-bar": "~55.0.4",
